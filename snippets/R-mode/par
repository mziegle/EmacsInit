# -*- mode: snippet -*-
# name: par
# key: par
# --

myCex=1.5
par(oma = c(2, 2, 0, 0), # two rows of text at the outer left and bottom margin
        mar = c(4, 4, 0, 0), # space for one row of text at ticks and to separate plots
        mgp = c(2.5, 1, 0),    # axis label at 2 rows distance, tick labels at 1 row
        xaxs = 'i',          # remove internal space before and after plot
        yaxs = 'i',          # remove internal space before and after plot
        cex.lab=myCex, cex.axis=myCex, cex.main=myCex+0.2) #font size for label, axis, title
